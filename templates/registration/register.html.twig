{% extends 'base.html.twig' %}

{% block title %}Inscription - Mon Blog{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                <div class="text-center mb-4">
                    <i class="bi bi-person-plus text-primary" style="font-size: 3rem;"></i>
                    <h1 class="h3 mt-2">Créer un compte</h1>
                    <p class="text-muted">Rejoignez notre communauté de blogueurs</p>
                </div>

                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        {{ form_errors(registrationForm) }}

                        {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            <label for="{{ registrationForm.email.vars.id }}" class="form-label">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            {{ form_widget(registrationForm.email, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': 'nom@exemple.com'
                                }
                            }) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="mb-3">
                            <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label">
                                <i class="bi bi-lock"></i> Mot de passe
                            </label>
                            {{ form_widget(registrationForm.plainPassword, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': '••••••••'
                                }
                            }) }}
                            <small class="text-muted">Au moins 6 caractères</small>
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                {{ form_widget(registrationForm.agreeTerms, {
                                    'attr': {'class': 'form-check-input'}
                                }) }}
                                <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                                    J'accepte les <a href="#" class="text-decoration-none">conditions d'utilisation</a>
                                </label>
                            </div>
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-person-plus"></i> S'inscrire
                            </button>
                        </div>

                        <div class="text-center">
                            <span class="text-muted">Déjà un compte ?</span>
                            <a href="{{ path('app_login') }}" class="text-decoration-none">
                                Se connecter
                            </a>
                        </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
